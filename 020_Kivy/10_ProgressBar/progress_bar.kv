<SecondWindow >:
    name: "second"
    next_screen: "third"
    previous_screen: "first"
    id: my_layout

# 4 Анемометр
    RelativeLayout:
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint: (0.9, 0.15)
        # canvas.before:
        #     Color:
        #         rgba: (0.8, 0, 0, 0.3)

        #     Rectangle:
        #         size: self.size

        Label:
            pos_hint_x: None
            pos_hint_y: None
            pos: ((0, 'px'), (70, 'px'))
            size_hint: (1, None)
            height: 60
            text_size: self.size
            text: 'Анемометр'
            font_size: '50'
            font_name: my_layout.font_name_label  # 'comici.ttf'
            valign: 'bottom'  # ‘bottom’, ‘middle’ (or ‘center’) and ‘top’.
            halign: 'center'  # auto, left, center, right and justify
            color: my_layout.font_color  # [5/255, 179/255, 77/255, 1]  # [0, 0, 0, 1]
            # background_color: 1, 1, 1, 0.5
            # canvas.before:
            #     Color:
            #         rgba: (0, 0.8, 0, 0.3)
            #     Rectangle
            #         size: self.size
            #         pos: self.pos

        ProgressBar:
            id: progress_bar
            max: 100
            value: 50
            size_hint: (0.8, None)
            pos_hint: {'center_x': .5, 'center_y': .4}
            background_color: "#22222"
            # https://stackoverflow.com/questions/51719374/how-to-change-color-of-progress-bar-kivy

            canvas:
                BorderImage:
                    border: (12, 12, 12, 12)
                    pos: self.x, self.center_y - 12
                    size: self.width, 24
                    source: 'img/blue.png'
                BorderImage:
                    border: [
                        int(min(self.width * (self.value / float(self.max)) if self.max else 0, 12))] * 4
                    pos: self.x, self.center_y - 12
                    size: self.width * (self.value / float(self.max)) if self.max else 0, 24
                    source: 'img/red.png'
